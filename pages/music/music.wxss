/* pages/music/music.wxss */
.header{
  width: 100vw;
  display: flex;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-evenly;
}
.left,
.right{
  display: flex;
}
.left{
  flex: 1;
}
.box_left,
.box_right{
  display: flex;
}
.box_left{
  align-items: center;
}
.july{
  font-size: 50rpx;
  margin-top: 20rpx
}
.yue{
  font-size: 80rpx;
}
.line{
  width: 10rpx;
  height: 60rpx;
  margin: 0 20rpx;
  border-right: 3rpx solid #333;
}
.box_right{
  width: 50rpx;
  flex-direction: column;
  flex-wrap: wrap;
  text-align: center;
  margin-top: 10rpx
}
.like{
  margin-right: 20rpx;
}
.num{
  position: relative;
  right: 0;
  top: -40rpx;
  font-size: 24rpx;
}
.img{
  width: 50rpx;
  height: 50rpx;
}
.fx_img{
  width: 45rpx;
  height: 45rpx;
}
.center{
  width: 100vw;
  height: 480rpx;
}
.music_box{
  position: relative;
  width: 100%;
  height: 400rpx;
}
.music{
    position: relative;
}
.music_img{
  width: 100%;
  z-index: 1;
}
.music_img.active{
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: 50rpx 0 0 -200rpx;
}
.play{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: 200rpx 0 0 -50rpx;
    z-index: 2;
    opacity: 0;
}
.play.active{
    opacity: 1;
}
.item_img{
  position: absolute;
  left: 70rpx;
  bottom: -200rpx;
  width: 60rpx;
  height: 200rpx;
  z-index: 2;
}
.container_box{
  width: 80%;
  height: 100rpx;
  margin: 200rpx auto 0;
  font-size: 36rpx;
}
.title{
  width: 80%;
  height: 100rpx;
  margin: 100rpx auto 0;
  font-size: 36rpx;
  text-align: center;
  background: #efefef;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.title text{
    width: 70%;
}
.title image{
  width: 60rpx;
  height: 60rpx;
}