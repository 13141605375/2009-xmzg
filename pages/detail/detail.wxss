/* pages/detail/detail.wxss */
page{
    background: #eee;
}
.detail_top{
  width: 100vw;
  height: 640rpx;
  background: #fff;
}
.header_box{
  position: fixed;
  right: 30rpx;
  top: 30rpx;
}
.header_num{
  position: absolute;
  left: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ab9564;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 26rpx;
}
.header_img{
  width: 80rpx;
  height: 80rpx;
}
.img{
  width: 100%;
  height: 400rpx;
}
.box{
  width: 70%;
  height: 80rpx;
  background: #ab9564;
  border-radius: 50rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.left{
  display: flex;
  border-right: 1rpx dotted #fff;
}
.num_box{
  width: 100rpx;
  text-align: center;
}
.num{
  width: 80rpx;
  text-align: center;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx
}
.right{
    width: 50%;
  display: flex;
}
.shop_cart{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.add_img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  opacity: 0;
}
.box2{
    width: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
    font-size: 28rpx;
}
.detail_bottom{
    width: 100%;
    background: #fff;
    margin-top: 20rpx
}
.btnList{
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
    margin-bottom: 20rpx;
}
.list{
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-bottom: 1rpx solid transparent;
}
.list.active{
    border-bottom: 1rpx solid #ab9564;
    color: #ab9564;
}
.item_box{
    width: 100vw;
}
.item_img{
    width: 100%;
    display: block;
}
.add_img.fly{
    opacity: 1;
    transition: all 500ms cubic-bezier(0.000, 0.340, 1.000, 1.650);
}
.animation{
    animation: scale 200ms linear;
}
@keyframes scale{
    0%{
        transform: scale(1.2);
    }
    100%{
      transform: scale(1);
    }
}

