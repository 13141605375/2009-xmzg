/* pages/classFy/classFy.wxss */
.box{
  width: 100vw;
  height: 100vh;
  display: flex;
}
.left{
  width: 160rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  border-right: 1rpx solid #ccc;
  box-sizing: border-box;
}
.left .name{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  border-left: 4rpx solid transparent;
}
.left .name.active{
  color: #ab9564;
  border-left: 4rpx solid #ab9564;
}
.right{
  width: calc( 100% - 160rpx);
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.header{
  width: 100%;
  height: 400rpx;
}
.title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 40rpx;
  color: #ab956d;
}
