<!--components/cartItem/index.wxml-->
<view class="cartItem">
    <image bindtap="onSelect" class="selectImg" src="{{cart.status?select:noselect}}"></image>
    <image src="{{cart.imgSrc}}" class="img"></image>
    <view class="info">
        <view class="info_top">
            <text class="name">{{cart.name}}</text>
            <text class="price">ï¿¥{{cart.price}}</text>
        </view>
        <view class="info_bottom">
            <view class="ctrl_box">
                <text bindtap="onCut" class="{{cart.count==1?'disable':''}}">-</text>
                <input type="text" value="{{cart.count}}"/>
                <text bindtap="onAdd">+</text>
            </view>
            <text bindtap="onDel">x</text>
        </view>
    </view>
</view>
